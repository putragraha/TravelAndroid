<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_update_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_profile"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_name"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_user"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:hint="@string/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/actv_update_profile"
                    tools:text="Passenger Name" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_email"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_mail"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:hint="@string/email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_name"
                    tools:text="Email" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_phone_number"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:hint="@string/phone_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_email"
                    tools:text="Phone Number" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_phone_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_update_profile">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actv_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_old_password"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:hint="@string/old_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/actv_change_password"
                    tools:text="Old Password" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_new_password"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:hint="@string/new_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_old_password"
                    tools:text="Old Password" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/acet_confirm_password"
                    style="@style/RoundedBoxEditText.Iconed"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:enabled="false"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:hint="@string/confirm_new_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_new_password"
                    tools:text="Old Password" />

                <Button
                    android:id="@+id/btn_change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/change_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/acet_confirm_password" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>