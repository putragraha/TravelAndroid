<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/acet_name"
            style="@style/RoundedBoxEditText.Iconed"
            android:drawableStart="@drawable/ic_user"
            android:enabled="false"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Passenger Name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/acet_email"
            style="@style/RoundedBoxEditText.Iconed"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_mail"
            android:enabled="false"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/acet_name"
            tools:text="Email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/acet_phone_number"
            style="@style/RoundedBoxEditText.Iconed"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_phone"
            android:enabled="false"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/acet_email"
            tools:text="Phone Number" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/acet_phone_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>