<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_passenger_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_information"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:text="@string/group"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/aciv_group"
            app:layout_constraintTop_toBottomOf="@id/actv_passenger_detail_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_group"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/actv_group_title"
            app:layout_constraintBottom_toBottomOf="@id/actv_group"
            app:srcCompat="@drawable/ic_group" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/actv_group_title"
            app:layout_constraintTop_toBottomOf="@id/actv_group_title"
            tools:text="Libra Travel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:text="@string/email"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/aciv_email"
            app:layout_constraintTop_toBottomOf="@id/actv_group" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_email"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/actv_email_title"
            app:layout_constraintBottom_toBottomOf="@id/actv_email"
            app:srcCompat="@drawable/ic_mail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/actv_email_title"
            app:layout_constraintTop_toBottomOf="@id/actv_email_title"
            tools:text="driver@gmail.com" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>